server {
    listen 80;
    listen [::]:80;
    server_name thelastknightofaveron.cat 46.183.113.139;
    # Redirige todo el tr√°fico HTTP a HTTPS
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name thelastknightofaveron.cat 46.183.113.139;

    ssl_certificate /etc/letsencrypt/live/thelastknightofaveron.cat/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/thelastknightofaveron.cat/privkey.pem;

    root /var/www/html;
    index index.html index.htm;

    location / {
        try_files $uri $uri/ /index.html;
    }

    # Proxy para el backend (puerto 3000)
    location /services/ {
        proxy_pass http://localhost:3000/;
        proxy_http_version 1.1;
	#        proxy_set_header Upgrade $http_upgrade;
	#        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
	#        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
    }

    # Proxy para socket.io (websockets, puerto 3000)
    location /socket.io {
	    #        proxy_pass http://localhost:3000/socket.io/;
        proxy_pass http://localhost:3000/socket.io/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /ws/ {
        proxy_pass http://localhost:3000/ws/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
    }

    # El resto de tus proxys existentes:
    location /player/ {
        proxy_pass http://localhost:3001/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
